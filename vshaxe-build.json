{
    "targets": [
        {
            "name": "hxparser",
            "composite": true,
            "targetDependencies": [
                "hxparser-walker",
                "hxparser-tests"
            ],
            "args": {
                "debug": true
            }
        },
        {
            "name": "hxparser-walker",
            "args": {
                "classPaths": ["src"],
                "macros": [
                    "util.GenWalker.gen()",
                    "util.GenStackAwareWalker.gen()"
                ],
                "debug": true
            }
        },
        {
            "name": "hxparser-tests",
            "inherit": "vshaxe-node",
            "args": {
                "classPaths": ["src", "test"],
                "debug": true,
                "main": "hxParser.RoundTripTest",
                "output": {
                    "target": "js",
                    "path": "bin/test.js"
                }
            }
        }
    ]
}